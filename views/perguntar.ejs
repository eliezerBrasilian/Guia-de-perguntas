<%- include ('partials/header.ejs') %>
<link rel="stylesheet" href="/css/style.css" />
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <div class="card" id="formulario-pergunta">
      <div class="card-header">
        <h3>Realizar perguntas</h3>
      </div>
      <div class="card-body">
        <form method="post" action="/salvar_pergunta">
          <label>Título</label>
          <input
            type="text"
            placeholder="escreva o titulo da pergunta"
            class="form-control"
            name="titulo"
            id="titulo"
          />
          <br />
          <label>Descrição</label>
          <textarea
            placeholder="descreva sua pergunta aqui"
            class="form-control"
            name="descricao"
          ></textarea>
          <br />
          <button class="btn btn-primary">Enviar pergunta</button>
        </form>
      </div>
    </div>

    <hr />
  </div>
</body>
<%- include('partials/footer') %>
